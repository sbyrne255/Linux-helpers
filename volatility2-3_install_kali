sudo bash -c 'sed -i "s|kali.darklab.sh/kali|http.kali.org/kali|g" /etc/apt/sources.list && sed -i "s|kali.download/kali|http.kali.org/kali|g" /etc/apt/sources.list && apt update && apt -y full-upgrade && apt install -y python2 python2-dev python3 python3-pip python3-dev build-essential git libyara-dev yara python3-venv && curl -s https://bootstrap.pypa.io/pip/2.7/get-pip.py -o /tmp/get-pip.py && python2 /tmp/get-pip.py && mkdir -p /volatility && cd /volatility && git clone https://github.com/volatilityfoundation/volatility.git vol2 && cd vol2 && python2 -m pip install -U setuptools wheel && python2 -m pip install distorm3==3.4.4 pycrypto pillow openpyxl ujson pytz capstone yara-python==3.7.0 && cd /volatility && git clone https://github.com/volatilityfoundation/volatility3.git vol3 && python3 -m pip install pycryptodome --break-system-packages && echo "Installation complete. Run Vol2 with: python2 /volatility/vol2/vol.py  | Vol3 with: python3 /volatility/vol3/vol.py"'
